[user]
	name = kino-ma
	email = kino.ma.ms@gmail.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	excludesfile = ~/.gitignore_global
[pull]
	ff = only
[alias]
    ##
    #  Shortcut for commands that frequently used
    ##

	s = status
	d = diff
	ds = diff --staged


    ##
    #  Aliases about commiting
    ##

    # commit with message
	c = commit -m

    # A new feature
    commit-feat = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'feat'"
    c-feat = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'feat'"

    # A bug fix
    commit-fix = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'fix'"
    c-fix = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'fix'"

    # A code change that neither fixes a bug nor adds a feature
    commit-refactor = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'refactor'"
    c-refactor = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'refactor'"

    # Adding missing tests or correcting existing tests
    commit-test = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'test'"
    c-test = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'test'"

    # A code change that improves performance
    commit-perf = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'perf'"
    c-perf = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'perf'"

    # Changes that do not affect the meaning of the code
    commit-style = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'style'"
    c-style = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'style'"

    # Documantation only changes
    commit-docs = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'docs'"
    c-docs = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'docs'"

    # Changes that affect the build system or external dependencies
    commit-build = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'build'"
    c-build = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'build'"

    # Changes to CI configuration files and scripts
    commit-ci = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'ci'"
    c-ci = !"source $HOME/.shell_fn/cmt_pfx.sh; git_commit_with_prefix 'ci'"


    ##
    #  Other useful aliases
    ##


    # show commit logs in pretty style
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'

