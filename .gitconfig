[user]
	name = kino-ma
	email = kino.ma.ms@gmail.com
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[core]
	excludesfile = ~/.gitignore_global
[pull]
	ff = only
[alias]
    ##
    #  Shortcut for commands that frequently used
    ##

	s = status
	d = diff
	ds = diff --staged


    ##
    #  Aliases about commiting
    ##

    # commit with message
	c = commit -m

    # A new feature
    commit-feat = !git-commit-with-prefix 'feat'
    c-feat = !git-commit-with-prefix 'feat'

    # A bug fix
    commit-fix = !git-commit-with-prefix 'fix'
    c-fix = !git-commit-with-prefix 'fix'

    # A code change that neither fixes a bug nor adds a feature
    commit-refactor = !git-commit-with-prefix 'refactor'
    c-refactor = !git-commit-with-prefix 'refactor'

    # Adding missing tests or correcting existing tests
    commit-test = !git-commit-with-prefix 'test'
    c-test = !git-commit-with-prefix 'test'

    # A code change that improves performance
    commit-perf = !git-commit-with-prefix 'perf'
    c-perf = !git-commit-with-prefix 'perf'

    # Changes that do not affect the meaning of the code
    commit-style = !git-commit-with-prefix 'style'
    c-style = !git-commit-with-prefix 'style'

    # Documantation only changes
    commit-docs = !git-commit-with-prefix 'docs'
    c-docs = !git-commit-with-prefix 'docs'

    # Changes that affect the build system or external dependencies
    commit-build = !git-commit-with-prefix 'build'
    c-build = !git-commit-with-prefix 'build'

    # Changes to CI configuration files and scripts
    commit-ci = !git-commit-with-prefix 'ci'
    c-ci = !git-commit-with-prefix 'ci'


    ##
    #  Other useful aliases
    ##


    # show commit logs in pretty style
	gr = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'

